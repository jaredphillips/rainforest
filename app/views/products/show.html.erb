<section>
	<h3><%= @product.name %></h3>
	<p><%= @product.description %></p>
	<p><%= @product.formatted_price %></p>
	<h4>Reviews</h4>
	<h5>Add a Review</h5>
	<% if current_user %> 
		<%= form_for([@product, @review]) do |f| %>
			<% if @review.errors.any? %> 
			  <div>
			  	<%= pluralize(@review.errors.count, "Error") %> prevented this from being saved.
			  	<ul>
			  		<% @review.errors.each do |msg| %>
			  			<li><%= msg %></li>
		  			<% end %>
			  	</ul>
				</div>
			<% end %>
			<div class="field">
				<%= f.label :comment %> 
				<%= f.text_area :comment %> 
			</div>

			<div class="actions">
				<%= f.submit %> 
			</div>
		<% end %>
	<% else %>
	  <p>Please <%= link_to "log in", new_session_url %> to leave a review</p>
  <% end %> 


	<% @product.reviews.each do |review| %>
		<p><%= review.comment %></p>
		<% unless review.user == nil %>
			<p>Left by:<%= review.user.email %> at <%= review.created_at %>.</p>
		<% end %>
	<% end %>
</section>